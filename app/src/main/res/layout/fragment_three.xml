<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/module_message"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="66dp"
                android:layout_height="4dp"
                android:background="@color/skyBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sendbottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_name"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_mac"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_type"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_connect_state"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_service_uuid"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_read_uuid"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_send_uuid"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/general_fragment_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/packet_loss"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="66dp"
                android:layout_height="4dp"
                android:background="@color/skyBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sendbottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/packet_loss_coefficient"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/general_fragment_pack_minus"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/packet_loss_coefficient"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/general_fragment_pack_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/general_fragment_pack_add"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/packet_loss_coefficient"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/add" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/pack_loss_hint" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/module_parameters"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="66dp"
                android:layout_height="4dp"
                android:background="@color/skyBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sendbottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:text="@string/module_velocity"
                        android:textColor="@color/black" />

                    <com.hc.mixthebluetooth.customView.CheckBoxSample
                        android:id="@+id/general_fragment_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:color_background="@color/skyBlue"
                        app:color_border="@color/skyBlue"
                        app:size="16dp" />

                    <TextView
                        android:id="@+id/general_fragment_height_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:text="@string/module_height" />

                    <com.hc.mixthebluetooth.customView.CheckBoxSample
                        android:id="@+id/general_fragment_centre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:color_background="@color/skyBlue"
                        app:color_border="@color/skyBlue"
                        app:size="16dp" />

                    <TextView
                        android:id="@+id/general_fragment_centre_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:text="@string/module_centre" />

                    <com.hc.mixthebluetooth.customView.CheckBoxSample
                        android:id="@+id/general_fragment_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:color_background="@color/skyBlue"
                        app:color_border="@color/skyBlue"
                        app:size="16dp" />

                    <TextView
                        android:id="@+id/general_fragment_low_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:text="@string/module_low" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module_velocity_hint"
                    android:textColor="@color/darkRed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_time"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/general_fragment_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module_time_hint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_ble_buff"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/general_fragment_ble_buff"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/module_classic_buff"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/general_fragment_classic_buff"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module_ble_buff_hint" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coded_format"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="66dp"
                android:layout_height="4dp"
                android:background="@color/skyBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sendbottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:text="@string/coded_format_string"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="horizontal"
                        android:paddingStart="100dp"
                        android:gravity="center">

                        <com.hc.mixthebluetooth.customView.CheckBoxSample
                            android:id="@+id/general_fragment_utf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:color_background="@color/skyBlue"
                            app:color_border="@color/skyBlue"
                            app:size="16dp" />

                        <TextView
                            android:id="@+id/general_fragment_utf_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/coded_format_utf" />

                        <com.hc.mixthebluetooth.customView.CheckBoxSample
                            android:id="@+id/general_fragment_gbk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:color_background="@color/skyBlue"
                            app:color_border="@color/skyBlue"
                            app:size="16dp" />

                        <TextView
                            android:id="@+id/general_fragment_gbk_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/coded_format_gbk" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="100dp"
                        android:paddingTop="15dp"
                        android:gravity="center">

                        <com.hc.mixthebluetooth.customView.CheckBoxSample
                            android:id="@+id/general_fragment_ascii"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:color_background="@color/skyBlue"
                            app:color_border="@color/skyBlue"
                            app:size="16dp" />

                        <TextView
                            android:id="@+id/general_fragment_ascii_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="24dp"
                            android:text="@string/coded_format_ascii" />

                        <com.hc.mixthebluetooth.customView.CheckBoxSample
                            android:id="@+id/general_fragment_unicode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:color_background="@color/skyBlue"
                            app:color_border="@color/skyBlue"
                            app:size="16dp" />

                        <TextView
                            android:id="@+id/general_fragment_unicode_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="20dp"
                            android:text="@string/coded_format_unicode" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/module_other_message"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="66dp"
                android:layout_height="4dp"
                android:background="@color/skyBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sendbottom"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/home_page_that" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/home_page_that"
                    android:src="@drawable/hint_home_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/home_page_head" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/home_page_head"
                    android:src="@drawable/hint_home_head2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/about_us"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/web"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/versions"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
